@model Person
@{
    ViewBag.Title = "First Responsive Web App";
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width"/>
    <title>First Responsive Web App</title>
</head>
<body>
    <div class="container">
        <header class="jumbotron">
            <h1 class="mt-3">@ViewBag.Title</h1>
        </header>
        <main>
            <form asp-action="Index" method="post" class="form-horizontal">
                <div class="row my-2">
                    <label asp-for="FirstName" class="control-label col-md-3">First Name:</label>
                    <input asp-for="FirstName" class="form-control col-md-3" />
                    <span asp-validation-for="FirstName" class="text-danger col"></span>
                </div>
                <div class="row my-2">
                    <label asp-for="LastName" class="control-label col-md-3">Last Name:</label>
                    <input asp-for="LastName" class="form-control col-md-3" />
                    <span asp-validation-for="LastName" class="text-danger col"></span>
                </div>
                <div class="row my-2">
                    <label asp-for="DateOfBirth" class="control-label col-md-3">Date of Birth:</label>
                    <input asp-for="DateOfBirth" type="date" class="form-control col-md-3" />
                    <span asp-validation-for="DateOfBirth" class="text-danger col"></span>
                </div>
                <div class="row my-2">
                    <label class="control-label col-md-3">Message:</label>
                    <input value="@ViewBag.Message" readonly class="form-control col-md-3" />
                </div>
                <div class="row my-2">
                    <div class="col offset-md-3 pl-0">
                        <button type="submit" class="btn btn-primary">Calculate Age</button>
                        <a asp-action="Index" class="btn btn-outline-secondary">Clear All!</a>
                    </div>
                </div>
            </form>
        </main>
    </div>
</body>
</html>